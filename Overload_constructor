#include<iostream>
#include<conio.h>
#include<math.h>
using namespace std;
class Complex
{
	private:
		int r,m;
		public:
			void getdata()
			{
				cout<<"Enter real and imaginary part of the complex number : ";
				cin>>r>>"+">>m>>"i";
			}
			void display()
			{
				cout<<r<<m;
			}
			Complex operator + (Complex o)
			{
				Complex s;
				s.r=r+o.r;
				s.m=m+o.m;
				return s;
			}
};
int main()
{
	Complex p,q,z,r;
	p.getdata();
	q.getdata();
	z=p+q;
	z.display();
	return 0;
}
